<Window x:Class="Silver_HTPC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Silver_HTPC"
        mc:Ignorable="d"
        Title="AdvancedSettings" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0,1" StartPoint="1,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="54,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="29" Width="180" FontSize="20" FontWeight="Bold"><Run Text="Advanced "/><Run Text="Settings"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="85,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="29" Width="126" FontSize="20"><Run Text="Colou"/><Run Text="r"/><Run Text=" "/><Run Text="blind"/></TextBlock>
        <ComboBox HorizontalAlignment="Left" Height="29" Margin="252,184,0,0" VerticalAlignment="Top" Width="196">
            <ComboBoxItem Content="High Contrast"></ComboBoxItem>
            <ComboBoxItem Content="Reduce colours??"></ComboBoxItem>
        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="50,90,0,0" TextWrapping="Wrap" Text="Accessibility" VerticalAlignment="Top" Height="29" Width="109" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="85,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="29" Width="109" FontSize="20" Text="Magnifier"/>
        <Button Content="Off" HorizontalAlignment="Left" Height="29" Margin="252,137,0,0" VerticalAlignment="Top" Width="44" Background="#FFEC2525"/>
        <Button Content="On" HorizontalAlignment="Left" Height="29" Margin="296,137,0,0" VerticalAlignment="Top" Width="44" Background="#FFD4D4D4"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="29" Width="122" FontSize="20" Text="Notifications"/>
        <Button Content="Off" HorizontalAlignment="Left" Height="29" Margin="252,256,0,0" VerticalAlignment="Top" Width="44" Background="#FFD4D4D4"/>
        <Button Content="On" HorizontalAlignment="Left" Height="29" Margin="296,256,0,0" VerticalAlignment="Top" Width="44" Background="#FF00CF55"/>
        <Image HorizontalAlignment="Left" Height="29" Margin="17,19,0,0" VerticalAlignment="Top" Width="32" Source="Settings gear.png"/>
        <Rectangle HorizontalAlignment="Left" Height="5" Margin="0,60,-0.444,0" VerticalAlignment="Top" Width="796" Fill="#FF777A93"/>

    </Grid>
</Window>
