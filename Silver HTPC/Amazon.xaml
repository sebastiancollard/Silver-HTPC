<Window x:Class="Silver_HTPC.Amazon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Silver_HTPC"
        mc:Ignorable="d"
        Title="Amazon" Height="1080" Width="1920" KeyDown="Window_KeyDown">
    <Window.Resources>
        <ScaleTransform x:Key="windowScaleTransform" ScaleX="2.4" ScaleY="2.4" />
    </Window.Resources>
    <Grid LayoutTransform="{StaticResource windowScaleTransform}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="265*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="92*"/>
        </Grid.ColumnDefinitions>
        <Image HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="792" Source="Image/primeHome.png" Stretch="Fill" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
