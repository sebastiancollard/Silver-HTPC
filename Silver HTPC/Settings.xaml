<Window x:Class="Silver_HTPC.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Silver_HTPC"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800" KeyDown="Window_KeyDown">

    <Window.Resources>
        <LinearGradientBrush x:Key="ButtonNormalBackground" EndPoint="0,1" StartPoint="0,0">
            <GradientStop Color="#F3F3F3" Offset="0"/>
            <GradientStop Color="#EBEBEB" Offset="0.5"/>
            <GradientStop Color="#DDDDDD" Offset="0.5"/>
            <GradientStop Color="#CDCDCD" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="ButtonNormalBorder" Color="#FF707070"/>
        <Style x:Key="ToggleButtonStyle1" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="{StaticResource ButtonNormalBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ButtonNormalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <StackPanel Orientation="Horizontal">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <Border x:Name="on" Width="25" Height="25" Background="LightGray" CornerRadius="2,0,0,4" Margin="10,0,0,0">
                                <TextBlock x:Name="onText" Text="On" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border x:Name="off" Width="25" Height="25" Background="LightGray" CornerRadius="0,2,4,0">
                                <TextBlock x:Name="offText" Text="Off" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#ADADAD"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="on" Property="Background" Value="LightBlue"/>
                                <Setter TargetName="onText" Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="off" Property="Background" Value="LightBlue"/>
                                <Setter TargetName="offText" Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,0" MappingMode="RelativeToBoundingBox" StartPoint="0,1">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="White"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" Margin="64,19,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="29" Width="109" FontSize="20" FontWeight="Bold"><Run Text="Settings"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="85,126,0,0" TextWrapping="Wrap" Text="Text size" VerticalAlignment="Top" Height="29" Width="109" FontSize="20"/>
        <Slider Name="_slider_TextSize" HorizontalAlignment="Left" Margin="216,131,0,0" VerticalAlignment="Top" Width="196" Maximum="100" ValueChanged="TextSlider_ValueChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="85,184,0,0" TextWrapping="Wrap" Text="Language" VerticalAlignment="Top" Height="29" Width="109" FontSize="20"/>
        <ComboBox Name="_combobox_Language" HorizontalAlignment="Left" Height="29" Margin="216,184,0,0" VerticalAlignment="Top" Width="196">
            <ComboBoxItem Content="English"></ComboBoxItem>
            <ComboBoxItem Content="French"></ComboBoxItem>
            <ComboBoxItem Content="Spanish"></ComboBoxItem>
        </ComboBox>
        <Button x:Name="_button_AdvanceSettings" Content="     Advanced Settings" HorizontalAlignment="Left" Height="113" Margin="-2,313,-0.444,-3.333" VerticalAlignment="Top" Width="798" FontWeight="Bold" FontSize="20" HorizontalContentAlignment="Left" Background="#FFD4D4D4" Click="AdSet_button_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="85,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="29" Width="117" FontSize="20"><Run Text="Button "/><Run Text="guide"/></TextBlock>
        <Button Content="Off" HorizontalAlignment="Left" Height="29" Margin="216,244,0,0" VerticalAlignment="Top" Width="44" Background="#FFEC2525"/>
        <Button Content="On" HorizontalAlignment="Left" Height="29" Margin="260,244,0,0" VerticalAlignment="Top" Width="44" Background="#FFD4D4D4"/>
        <!--#FF00CF55-->
        <ToggleButton Content="ON LINE MODE" Style="{StaticResource ToggleButtonStyle1}" Margin="101,83,-100.444,-83.333"></ToggleButton>
        <Image HorizontalAlignment="Left" Height="29" Margin="17,19,0,0" VerticalAlignment="Top" Width="32" Source="Settings gear.png"/>
        <Rectangle HorizontalAlignment="Left" Height="5" Margin="0,60,-0.444,0" VerticalAlignment="Top" Width="796" Fill="#FF777A93"/>

    </Grid>
</Window>
