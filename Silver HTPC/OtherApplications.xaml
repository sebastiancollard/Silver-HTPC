<Window x:Class="Silver_HTPC.OtherApplications"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Silver_HTPC"
        mc:Ignorable="d"
        Title="OtherApplications" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0,1" StartPoint="1,0">
            <GradientStop Color="Black" Offset="1"/>
            <GradientStop Color="White"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <ScrollViewer Margin="0,49,0,0">
            <StackPanel x:Name="Other_StackPanel">
                                   
                
            </StackPanel>
        </ScrollViewer>
        <Label Content="Other Applications" HorizontalAlignment="Left" Height="50" Margin="-6,-1,0,0" VerticalAlignment="Top" Width="270" FontSize="30" Foreground="White"/>
    </Grid>
</Window>
