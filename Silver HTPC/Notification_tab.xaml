<Window x:Class="Silver_HTPC.Notification_tab"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Silver_HTPC"
        mc:Ignorable="d"
        Title="Notification_tab" Height="450" Width="800" KeyDown="Window_KeyDown"
        Background="{StaticResource WindowBackgroundBrush}">

    <StackPanel x:Name="windowStack" HorizontalAlignment="Left" Height="420" Margin="-4,0,-4,-1" VerticalAlignment="Top" Width="800" CanVerticallyScroll="True">
        <Border BorderBrush="Black" BorderThickness="2" Height="100">
            <Label x:Name="Notification_title_label" Content="Notifications" Height="62" FontSize="30" Foreground="Black"/>
        </Border>
        <ScrollViewer x:Name="scroll" VerticalScrollBarVisibility="Hidden">
        <StackPanel x:Name="MainStack">
            
        </StackPanel>
        </ScrollViewer>


    </StackPanel>
</Window>
